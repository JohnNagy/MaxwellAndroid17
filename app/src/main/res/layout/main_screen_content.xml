<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainScreenActivity"
    tools:showIn="@layout/main_screen_app_bar"
    android:background="@drawable/poster_50_g_blur_270x450">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutMainScreen"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowLayout1"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/buttonAttractions"
                android:onClick="openAttractionsActivity"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/image007" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Bike_Park_Activity_Label"
                android:id="@+id/buttonBikeNPark"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/car" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Kid_Zone_Activity_Label"
                android:id="@+id/buttonKidsZone"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowLayout2"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Sponsors_Activity_Label"
                android:id="@+id/buttonSponsors"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/sponsors" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Directions_Activity_Label"
                android:id="@+id/buttonDirections"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/image008"
                android:onClick="openGMapsActivity"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Social_Media_Activity_Label"
                android:id="@+id/buttonSocialMedia"
                android:onClick="openSocialMediaActivity"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowLayout3"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/About_Offutt_Activity_Label"
                android:id="@+id/buttonAboutOffutt"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:onClick="openAboutOffuttActivity" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/FAQ_Activity_Label"
                android:id="@+id/buttonFAQ"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:onClick="openFAQActivity"
                android:background="@drawable/image005" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/Contact_Activity_Label"
                android:id="@+id/buttonContactInfo"
                android:onClick="openContactActivity"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp" />
        </TableRow>

    </TableLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/marquee_layout"
        />

</RelativeLayout>

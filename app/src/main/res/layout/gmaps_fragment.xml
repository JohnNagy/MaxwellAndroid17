<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GMapsFragment"
        />

    <LinearLayout
        android:id="@+id/radio_group_list_selector"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="4dp"
        >

        <CheckBox
            android:id="@+id/Shuttle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Shuttle Pickup"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="showMarkers" />
        <View
            android:id="@+id/VerticalLine0"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <CheckBox
            android:id="@+id/OnBase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="On-Base Parking"
            android:layout_weight="1"
            android:onClick="showMarkers" />

        <View
            android:id="@+id/VerticalLine1"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <CheckBox
            android:id="@+id/Handi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Handicap Parking"
            android:layout_weight="1"
            android:onClick="showMarkers" />

    </LinearLayout>
</FrameLayout>